html, body
	width 100%
	height 100%
	margin 0

a
	color white
	text-decoration none
	&:hover
		text-decoration underline
	&:before
		content "*"
		opacity 0.5

body
	display flex
	align-items center
	justify-content center
	flex-direction column
	background #1c1c1c
	text-shadow 2px 2px 3px #1c1c1c, -2px -2px 3px #1c1c1c, 2px -2px 3px #1c1c1c, -2px 2px 3px #1c1c1c

#background
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	z-index -1

.page
	width 100%
	max-width 900px
	color white
	font-family monospace
	padding 20px
	font-size 120%

	.command
		padding 10px 0

	.logo
		font-family "Roboto Slab"
		font-size 400%
		padding 10px 0
		padding-bottom 20px

	.about
		padding 20px 0
		color lightblue

	.sf
		opacity 0.05

	.keyvalue
		white-space nowrap
		text-overflow ellipsis
		overflow hidden
		.key
			font-weight bold
			opacity 0.7
			padding 4px 0
			display inline-block
			padding-right 10px
			color white

		.value
			display inline-block
			padding-right 10px
			opacity 0.9
			&.multiline
				display block

			&:not(.multiline)
				white-space nowrap
				text-overflow ellipsis

			.item
				padding-left 10px

			.text
				display inline

	.project
		display flex
		padding 5px 10px
		color #cccccc
		.left
			width 300px
			display flex
			flex-direction column
			.title
				color #999
				font-weight bold
			.tags
				color lightblue
				padding 0 10px
				font-family monospace
				font-size 80%

				span
					padding 0 2px
		.right
			color inherit
