html, body
	padding 0
	margin 0
	font-family 'DejaVu Sans Mono', 'Consolas', monospace
	background #1c1c1c
	color whitesmoke
	line-height 1.6
	font-size 0.9rem
	
@font-face {
	font-family: 'DejaVu Sans Mono'
 	src: url('/fonts/DejaVuSansMono-subset.woff2') format("woff2"), url('/fonts/DejaVuSansMono-subset.zopfli.woff') format("woff"), url('/fonts/DejaVuSansMono-subset.ttf') format("truetype");
	unicode-range: U+9,U+A,U+20-7E,U+401,U+410-44F,U+451
	font-display: swap
}

@media screen and (min-width:801px)
	html, body
		font-size 1.1rem

*::-webkit-scrollbar {
    width 0.6em
    background-color black
} 

*::-webkit-scrollbar-thumb {
    background-color #ff5b5b
    border-radius 1em
}

*::-webkit-scrollbar-track
	-webkit-box-shadow inset 0 0 6px rgba(255,255,255,0.3);
	background-color black;


body 
	display flex
	justify-content center 

h1 
	font-size 5em
	font-family 'Roboto Slab'
	font-weight 400


.red
	color #ff5b5b
//h1	
	//&:first-letter
	//	color red

.line span
	display inline
	opacity 0.3	
	background #444
	padding 0.1em 0.5em
	line-height inherit
	border-radius 4px
	
a
	display inline-block
	color white
	

.content 
	flex-grow 1
	max-width 1200px
		
	.block
		padding 2rem		
		&.s
			padding 0.5rem 2rem
	
	.hidden-text
		color gray

	.things
		.line a
			color whitesmoke
			text-decoration none
		color #999
		b
			color whitesmoke	

	.projects
		display flex
		flex-wrap wrap
		justify-content space-between
		
		.tag
			padding 1rem
			margin-bottom 3rem
			white-space pre
			width 300px
			
			h3
				margin 0
			ul
				padding-inline-start 0
				//list-style none
			li
				margin 0.4em	
			li>a
				cursor pointer
				color whitesmoke
				padding 0 0.5em
				border-radius 4px
				text-transform lowercase
				text-decoration none
				&:not(.todo)
					background #2a2a2a
					&:hover
						background #111
				&.todo
					cursor default
			li.todo
				opacity 0.2			
				